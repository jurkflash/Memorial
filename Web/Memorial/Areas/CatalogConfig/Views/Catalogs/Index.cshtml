@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.Raw(Resources.Mix.Catalog)</h2>
<p>
    @Html.ActionLink(Resources.Mix.New, "Form", null, new { @class = "btn btn-primary" })
</p>

<table id="tbl" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.Raw(Resources.Mix.NameBR)</th>
            <th>@Html.Raw(Resources.Mix.DescriptionBR)</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#tbl").DataTable({
                ajax: {
                    url: "/api/catalogs",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "description"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn btn-sm btn-danger js-delete' data-catalog-id=" + data + ">刪除 Delete</button>";
                        }
                    }
                ]
            });


            $("#tbl").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm(MEMORIAL_CONFIRM, function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/catalogs/" + button.attr("data-catalog-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}


