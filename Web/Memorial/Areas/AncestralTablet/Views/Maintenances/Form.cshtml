@model Memorial.ViewModels.AncestralTabletTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.AncestralTabletTransactionDto.ApplicantId, area = "Applicant" });}

<h2>@Html.Raw(Resources.Mix.Form)</h2>

@using (Html.BeginForm("Save", "Maintenances", new { area = "AncestralTablet" }))
{
    @Model.AncestralTabletTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.FromBR)
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestralTabletTransactionDto.FromDate, "{0:yyyy-MM}", new { @class = "form-control datetimepicker", @required = Resources.Mix.Required })
            @Html.ValidationMessageFor(c => c.AncestralTabletTransactionDto.FromDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.ToBR)
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestralTabletTransactionDto.ToDate, "{0:yyyy-MM}", new { @class = "form-control datetimepicker", @required = Resources.Mix.Required })
            @Html.ValidationMessageFor(c => c.AncestralTabletTransactionDto.ToDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.PriceBR)
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestralTabletTransactionDto.Price, new { @class = "form-control", @required = Resources.Mix.Required })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.RemarkBR)
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.AncestralTabletTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.AncestralTabletItemId)
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.AncestralTabletId)
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.AF)
    <button type="submit" class="btn btn-primary">@Html.Raw(Resources.Mix.Save)</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">
        $("#AncestralTabletTransactionDto_FromDate").blur(function () {
            getAmount();
        });

        $("#AncestralTabletTransactionDto_ToDate").blur(function () {
            getAmount();
        });

        function getAmount() {
            var f = $("#AncestralTabletTransactionDto_FromDate").val();
            var t = $("#AncestralTabletTransactionDto_ToDate").val();
            if (f != "" && t != "") {
                var ii = $("#AncestralTabletTransactionDto_AncestralTabletItemId").val();
                var url = '/api/AncestralTabletMaintenance/GetAmount';
                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { from: f, to: t, itemId: ii }
                }).done(function (data) {
                    $("#AncestralTabletTransactionDto_Price").val(data);
                }).fail(function () {
                    toastr.error("Something unexpected happened.");
                });
            }
        }

        $(document).ready(function () {   // will trigger when the document is ready
            var dateNow = new Date();
            $('.datepicker').datepicker({
                dateFormat: 'yy-mm',
                useCurrent: true,
                defaultDate: dateNow
            }); //Initialise any date pickers
            $('.datetimepicker').datepicker({
                dateFormat: 'yy-mm',
                useCurrent: true,
                defaultDate: dateNow
            }); //Initialise any date pickers
        });
    </script>
}
