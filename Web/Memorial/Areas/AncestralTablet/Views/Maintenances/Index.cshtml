@model Memorial.ViewModels.AncestorItemIndexesViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (Model.AllowNew)
{
    <p>
        @Html.ActionLink("New", "Form", new { itemId = Model.AncestorItemId, applicantId = Model.ApplicantId, id = Model.AncestorId, area = "AncestralTablet" })
    </p>
}

@using (Html.BeginForm("Index", "Maintenances", new { area = "AncestralTablet" }))
{
    <p>
        Find by Name: @Html.TextBox("filter")
        @Html.Hidden("itemId", Model.AncestorItemId.ToString())
        @Html.Hidden("applicantId", Model.ApplicantId.ToString())
        @Html.Hidden("id", Model.AncestorId.ToString())
        <input type="submit" value="Search" class="btn btn-secondary" />
    </p>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>AF</th>
            <th>Ancestor</th>
            <th>Applicant</th>
            <th>From</th>
            <th>To</th>
            <th>Amount</th>
            <th>Create Date</th>
            <th>Invoice</th>
            <th>@Html.Raw(Resources.Mix.Edit)</th>
            <th>@Html.Raw(Resources.Mix.Delete)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ancestralTabletTransaction in Model.AncestralTabletTransactionDtos)
        {
            <tr>
                <td>@Html.ActionLink(ancestralTabletTransaction.AF, "Info", new { AF = ancestralTabletTransaction.AF }, new { target = "AncestralTabletTransactionInfo", area = "AncestralTablet" })</td>
                <td>@ancestralTabletTransaction.Ancestor.Name</td>
                <td>@ancestralTabletTransaction.Ancestor.Applicant.Name &nbsp; @ancestralTabletTransaction.Ancestor.Applicant.Name2</td>
                <td>@Convert.ToDateTime(ancestralTabletTransaction.FromDate).ToString("yyyy-MMM")</td>
                <td>@Convert.ToDateTime(ancestralTabletTransaction.ToDate).ToString("yyyy-MMM")</td>
                <td>@ancestralTabletTransaction.Price</td>
                <td>@ancestralTabletTransaction.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@Html.ActionLink("Invoice", "Invoice", new { AF = ancestralTabletTransaction.AF, area = "AncestralTablet" })</td>
                <td>@Html.ActionLink(Resources.Mix.Edit, "Form", new { AF = ancestralTabletTransaction.AF, applicantId = Model.ApplicantId, area = "AncestralTablet" })</td>
                <td>
                    @Html.ActionLink(Resources.Mix.Delete, "Delete",
                    new { AF = ancestralTabletTransaction.AF, itemId = Model.AncestorItemId, id = Model.AncestorId, applicantId = Model.ApplicantId, area = "AncestralTablet" },
                    new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
Page @(Model.AncestralTabletTransactionDtos.PageCount < Model.AncestralTabletTransactionDtos.PageNumber ? 0 : Model.AncestralTabletTransactionDtos.PageNumber) of @Model.AncestralTabletTransactionDtos.PageCount
@Html.PagedListPager(Model.AncestralTabletTransactionDtos, page => Url.Action("Index",
    new { page, id = Model.AncestorId.ToString(), itemId = Model.AncestorItemId.ToString(), applicantId = Model.ApplicantId.ToString(), filter = ViewBag.CurrentFilter }))



