@model Memorial.ViewModels.AncestralTabletTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.AncestralTabletTransactionDto.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Orders"))
{
    @Model.AncestralTabletTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.AncestralTabletTransactionDto.DeceasedId, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "-", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AncestralTabletTransactionDto.DeceasedId)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestralTabletTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.AncestralTabletTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestralTabletTransactionDto.Maintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.AncestralTabletTransactionDto.Maintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.AncestralTabletTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.AncestorItemId)
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.AncestorId)
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.AncestralTabletTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">

        $(document).ready(function () {

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#AncestralTabletTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });

            $("#AncestralTabletTransactionDto_Maintenance").rules("add",
                {
                    AtLeastOne: true
                });
        });
    </script>
}