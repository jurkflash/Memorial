@model Memorial.ViewModels.AncestorTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.AncestorTransactionDto.ApplicantId, area = "Applicant" });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Maintenance", new { area = "Ancestor" }))
{
    @Model.AncestorTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            From
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.FromDate, "{0:yyyy-MM}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(c => c.AncestorTransactionDto.FromDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            To
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.ToDate, "{0:yyyy-MM}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(c => c.AncestorTransactionDto.ToDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.AncestorTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(c => c.AncestorTransactionDto.AncestorItemId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.AncestorId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">
        $("#AncestorTransactionDto_FromDate").blur(function () {
            getAmount();
        });

        $("#AncestorTransactionDto_ToDate").blur(function () {
            getAmount();
        });

        function getAmount() {
            var f = $("#AncestorTransactionDto_FromDate").val();
            var t = $("#AncestorTransactionDto_ToDate").val();
            if (f != "" && t != "") {
                var ii = $("#AncestorTransactionDto_AncestorItemId").val();
                var url = '/api/AncestorMaintenance/GetAmount';
                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { from: f, to: t, itemId: ii }
                }).done(function (data) {
                    $("#AncestorTransactionDto_Price").val(data);
                }).fail(function () {
                    toastr.error("Something unexpected happened.");
                });
            }
        }

        $(document).ready(function () {   // will trigger when the document is ready
            var dateNow = new Date();
            $('.datepicker').datepicker({
                dateFormat: 'yy-mm',
                useCurrent: true,
                defaultDate: dateNow
            }); //Initialise any date pickers
            $('.datetimepicker').datepicker({
                dateFormat: 'yy-mm',
                useCurrent: true,
                defaultDate: dateNow
            }); //Initialise any date pickers
        });
    </script>
}
