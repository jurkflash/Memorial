@model Memorial.ViewModels.AncestorTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.AncestorTransactionDto.ApplicantId, area = "Applicant" });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Shifts", new { area = "Ancestor" }))
{
    @Model.AncestorTransactionDto.AF

    <div class="form-group row">
        <div class="col-md-3">
            Ancestor
        </div>
        <div class="col-md-6">
            @Model.AncestorTransactionDto.Ancestor.Name
        </div>
    </div>
    if (Model.AncestorTransactionDto.AF == null)
    {
        <div class="form-group row">
            <div class="col-md-3">
                HasDeceased
            </div>
            <div class="col-md-6">
                @Model.AncestorTransactionDto.Ancestor.hasDeceased
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-9">
                Shift To
            </div>
        </div>
    }
    else
    {
        <div class="form-group row">
            <div class="col-md-9">
                Shifted To
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                Ancestor
            </div>
            <div class="col-md-6">
                @Model.AncestorTransactionDto.Ancestor.Name
            </div>
        </div>
        <hr />
        <div>Change To</div>
    }
    <div class="form-group row">
        <div class="col-md-3">
            Site
        </div>
        <div class="col-md-6">
            <select id="Sites" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Area
        </div>
        <div class="col-md-6">
            <select id="Areas" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Ancestor
        </div>
        <div class="col-md-6">
            <select id="Ancestors" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            Name
        </div>
        <div class="col-md-2">
            Price
        </div>
        <div class="col-md-2">
            Maintenance
        </div>
        <div class="col-md-1">
            Remark
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2" id="qName"></div>
        <div class="col-md-2" id="qPrice">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
        <div class="col-md-2" id="qMaintenance">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.Maintenance, new { @class = "form-control", @required = "required" })
        </div>
        <div class="col-md-1" id="qRemark"></div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.AncestorTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(c => c.AncestorTransactionDto.AncestorItemId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.ShiftedAncestorId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.ShiftedAncestorTransactionAF)
    @Html.HiddenFor(c => c.AncestorTransactionDto.AncestorId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script>
        function sites() {
            $.ajax({
                url: "/api/Sites/GetSites"
            })
                .done(function (response) {
                    var len = response.length;
                    $("#Sites").empty();
                    $("#Sites").append("<option value='0'>Please Select</option>");
                    for (var i = 0; i < len; i++) {
                        var id = response[i]['id'];
                        var name = response[i]['name'];
                        $("#Sites").append("<option value='" + id + "'>" + name + "</option>");
                    }
                })
                .fail(function () {
                    toastr.error("Something unexpected happened.");
                });
        }

        function areas() {
            $.ajax({
                url: "/api/Ancestors/GetArea",
                data: { siteId: $("#Sites").val() }
            })
                .done(function (response) {
                    var len = response.length;
                    $("#Areas").empty();
                    $("#Areas").append("<option value='0'>Please Select</option>");
                    for (var i = 0; i < len; i++) {
                        var id = response[i]['id'];
                        var name = response[i]['name'];
                        $("#Areas").append("<option value='" + id + "'>" + name + "</option>");
                    }
                })
                .fail(function () {
                    toastr.error("Something unexpected happened.");
                });
        }

        function ancestors() {
            $.ajax({
                url: "/api/Ancestors/GetAvailableAncestorByAreaId",
                data: { areaId: $("#Areas").val() }
            })
                .done(function (response) {
                    var len = response.length;
                    $("#Ancestors").empty();
                    $("#Ancestors").append("<option value='0'>Please Select</option>");
                    for (var i = 0; i < len; i++) {
                        var id = response[i]['id'];
                        var name = response[i]['name'];
                        $("#Ancestors").append("<option value='" + id + "'>" + name + "</option>");
                    }
                })
                .fail(function () {
                    toastr.error("Something unexpected happened.");
                });
        }

        function clearAncestor() {
            $("#qName").empty();
            $("#AncestorTransactionDto_Price").val('');
            $("#AncestorTransactionDto_Maintenance").val('');
            $("#AncestorTransactionDto_AncestorId").val('');
            $("#qRemark").empty();
        }

        function ancestor() {
            clearAncestor();

            $.ajax({
                url: "/api/Ancestors/GetAncestor",
                data: { id: $("#Ancestors").val() }
            })
                .done(function (response) {
                    if (response != null) {
                        $("#qName").html(response['name']);
                        $("#AncestorTransactionDto_Price").val(response['price']);
                        $("#AncestorTransactionDto_Maintenance").val(response['maintenance']);
                        $("#qRemark").html(response['remark']);
                        $("#AncestorTransactionDto_AncestorId").val(response['id']);
                    }
                })
                .fail(function () {
                    toastr.error("Something unexpected happened.");
                });
        }

        $(document).ready(function () {
            sites();

            $("#Sites").change(function () {
                $("#Areas").empty();
                $("#Ancestors").empty();
                clearAncestor();

                if ($(this).val() != 0) {
                    areas();
                }
            })

            $("#Areas").change(function () {
                $("#Ancestors").empty();
                clearAncestor();

                if ($(this).val() != 0) {
                    ancestors();
                }
            });

            $("#Ancestors").change(function () {
                clearAncestor();

                if ($(this).val() != 0) {
                    ancestor();
                }
            });
        });

    </script>

}
