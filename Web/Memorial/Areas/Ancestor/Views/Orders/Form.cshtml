@model Memorial.ViewModels.AncestorTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.AncestorTransactionDto.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Orders"))
{
    @Model.AncestorTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.AncestorTransactionDto.DeceasedId, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "-", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AncestorTransactionDto.DeceasedId)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.AncestorTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.AncestorTransactionDto.Maintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.AncestorTransactionDto.Maintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.AncestorTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.AncestorTransactionDto.AncestorItemId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.AncestorId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.AncestorTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">

        $(document).ready(function () {

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#AncestorTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });

            $("#AncestorTransactionDto_Maintenance").rules("add",
                {
                    AtLeastOne: true
                });
        });
    </script>
}