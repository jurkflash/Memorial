@model Memorial.ViewModels.MiscellaneousItemsViewModel
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink(Model.SiteDto.Name, "Catalog", "Menu", new { siteId = Model.SiteDto.Id, applicantId = Model.ApplicantId, area = "Menu" }, null)
@Html.ActionLink(Resources.Mix.Miscellaneous, "Index", "Miscellaneous", new { siteId = Model.SiteDto.Id, applicantId = Model.ApplicantId, area = "Miscellaneous" }, null)

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var miscellaneousItem in Model.MiscellaneousItemDtos)
        {
            <tr>
                <td>@Html.ActionLink(miscellaneousItem.SubProductServiceDto.Name, "Index", miscellaneousItem.SubProductServiceDto.SystemCode, new { itemId = miscellaneousItem.Id, applicantId = Model.ApplicantId, area = "Miscellaneous" }, null)</td>
                <td>@miscellaneousItem.SubProductServiceDto.Description</td>
                <td>@miscellaneousItem.Price</td>
            </tr>
        }
    </tbody>
</table>