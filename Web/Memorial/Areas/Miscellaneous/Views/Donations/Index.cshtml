@model Memorial.ViewModels.MiscellaneousItemIndexesViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (Model.AllowNew)
{
    <p>
        @Html.ActionLink("New", "Form", new { itemId = Model.MiscellaneousItemId, applicantId = Model.ApplicantId, area = "Miscellaneous" })
    </p>
}

@using (Html.BeginForm("Index", "Donations", new { area = "Miscellaneous" }))
{
    <p>
        Find by Name: @Html.TextBox("filter")
        @Html.Hidden("itemId", Model.MiscellaneousItemId.ToString())
        @Html.Hidden("applicantId", Model.ApplicantId.ToString())
        <input type="submit" value="Search" class="btn btn-secondary" />
    </p>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>AF</th>
            <th>Miscellaneous</th>
            <th>Applicant</th>
            <th>Amount</th>
            <th>Remark</th>
            <th>Create Date</th>
            <th>Receipt</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var miscellaneousTransaction in Model.MiscellaneousTransactionDtos)
        {
            <tr>
                <td>@miscellaneousTransaction.AF</td>
                <td>@miscellaneousTransaction.MiscellaneousItemDto.Name</td>
                <td>@miscellaneousTransaction.ApplicantDto.Name &nbsp; @miscellaneousTransaction.ApplicantDto.Name2</td>
                <td>@miscellaneousTransaction.Amount</td>
                <td>@miscellaneousTransaction.Remark</td>
                <td>@miscellaneousTransaction.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@Html.ActionLink("Receipt", "Receipts", new { AF = miscellaneousTransaction.AF, area = "Miscellaneous" })</td>
                <td>@Html.ActionLink("Edit", "Form", new { AF = miscellaneousTransaction.AF, itemId = miscellaneousTransaction.MiscellaneousItemDtoId, applicantId = Model.ApplicantId, area = "Miscellaneous" })</td>
                <td>
                    @Html.ActionLink("Delete", "Delete",
                    new { AF = miscellaneousTransaction.AF, itemId = miscellaneousTransaction.MiscellaneousItemDtoId, applicantId = Model.ApplicantId, area = "Miscellaneous" },
                    new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
Page @(Model.MiscellaneousTransactionDtos.PageCount < Model.MiscellaneousTransactionDtos.PageNumber ? 0 : Model.MiscellaneousTransactionDtos.PageNumber) of @Model.MiscellaneousTransactionDtos.PageCount
@Html.PagedListPager(Model.MiscellaneousTransactionDtos, page => Url.Action("Index",
    new { page, itemId = Model.MiscellaneousItemId.ToString(), applicantId = Model.ApplicantId.ToString(), filter = ViewBag.CurrentFilter }))
