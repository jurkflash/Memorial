@model Memorial.Core.Dtos.DeceasedDto

<div class="row flexrow">
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.ICBR)
    </div>
    <div class="col-md-3">
        @Model.IC
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.EnglishNameBR)
    </div>
    <div class="col-md-3">
        @Model.Name
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.ChineseNameBR)
    </div>
    <div class="col-md-3">
        @Model.Name2
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.AgeBR)
    </div>
    <div class="col-md-3">
        @Model.Age
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.GenderBR)
    </div>
    <div class="col-md-3">
        @Model.GenderType.Name
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.MaritalBR)
    </div>
    <div class="col-md-3">
        @Model.MaritalType.Name
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.ReligionBR)
    </div>
    <div class="col-md-3">
        @Model.ReligionType.Name
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.NationalityBR)
    </div>
    <div class="col-md-3">
        @Model.NationalityType.Name
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.RemarkBR)
    </div>
    <div class="col-md-3">
        @Model.Remark
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.AddressBR)
    </div>
    <div class="col-md-11">
        @Model.Address
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.DeathDateBR)
    </div>
    <div class="col-md-3">
        @Model.DeathDate.ToString("yyyy-MM-dd HH:mm")
    </div>
    <div class="col-md-1">
        @Html.Raw(Resources.Mix.DeathCertificateBR)
    </div>
    <div class="col-md-3">
        @Model.DeathCertificate
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-2">
        @Html.Raw(Resources.Mix.DeathRegistrationCentreBR)
    </div>
    <div class="col-md-3">
        @Model.DeathRegistrationCentre
    </div>
    <div class="col-md-2">
        @Html.Raw(Resources.Mix.BurialCertificateBR)
    </div>
    <div class="col-md-3">
        @Model.BurialCertificate
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-2">
        @Html.Raw(Resources.Mix.ImportPermitNumberBR)
    </div>
    <div class="col-md-4">
        @Model.ImportPermitNumber
    </div>
</div>
