@model Memorial.ViewModels.CremationTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.CremationTransactionDto.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "CremationOrders"))
{
    @Model.CremationTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.CremationTransactionDto.DeceasedId, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.CremationTransactionDto.DeceasedId)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Funeral Company
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.CremationTransactionDto.FuneralCompanyId, new SelectList(Model.FuneralCompanyDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Cremate Date
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.CremationTransactionDto.CremateDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(c => c.CremationTransactionDto.CremateDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.CremationTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.CremationTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.CremationTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.CremationTransactionDto.CremationItemId)
    @Html.HiddenFor(c => c.CremationTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.CremationTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    @Scripts.Render("~/bundles/jqueryui-timepicker")
    @Styles.Render("~/Content/jqueryuicss-timepicker")

    <script type="text/javascript">

        $(document).ready(function () {
            var dateNow = new Date();
            $('.datepicker').datetimepicker({
                dateFormat: 'yy-mm-dd',
                useCurrent: true,
                defaultDate: dateNow
            }); //Initialise any date pickers
            $('.datetimepicker').datetimepicker({
                dateFormat: 'yy-mm-dd',
                timeFormat: 'HH:mm',
                useCurrent: true,
                defaultDate: dateNow
            }); //Initialise any date pickers

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#CremationTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });
        });
    </script>
}