@model Memorial.ViewModels.QuadrangleIndexesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quadrangle</h2>

<table class="table table-bordered table-hover">
    @foreach (var position in Model.Positions)
    {
        <tr>
            @foreach (var c in Model.Positions[position.Key])
            {
                foreach (var quadrangle in Model.QuadrangleDtos.Where(q => q.PositionY == position.Key && q.PositionX == c))
                {
                    <td>
                        @Html.ActionLink(quadrangle.Name, "Items", new { id = quadrangle.Id, applicantId = Model.ApplicantId })
                    </td>
                }
            }
        </tr>
    }
</table>

