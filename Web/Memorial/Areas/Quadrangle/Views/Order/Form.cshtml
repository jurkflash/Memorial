@model Memorial.ViewModels.QuadrangleTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.QuadrangleTransactionDto.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "QuadrangleOrder"))
{
    @Model.QuadrangleTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased1
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.QuadrangleTransactionDto.Deceased1Id, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.QuadrangleTransactionDto.Deceased1Id)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Deceased2
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.QuadrangleTransactionDto.Deceased2Id, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.QuadrangleTransactionDto.Deceased2Id)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Funeral Company
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.QuadrangleTransactionDto.FuneralCompanyId, new SelectList(Model.FuneralCompanyDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.QuadrangleTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.QuadrangleTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.QuadrangleTransactionDto.Maintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.QuadrangleTransactionDto.Maintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            LifeTime Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.QuadrangleTransactionDto.LifeTimeMaintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.QuadrangleTransactionDto.LifeTimeMaintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.QuadrangleTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.QuadrangleTransactionDto.QuadrangleItemId)
    @Html.HiddenFor(c => c.QuadrangleTransactionDto.QuadrangleId)
    @Html.HiddenFor(c => c.QuadrangleTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.QuadrangleTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">

        $(document).ready(function () {

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#QuadrangleTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });

            $("#QuadrangleTransactionDto_Maintenance").rules("add",
                {
                    AtLeastOne: true
                });

            $("#QuadrangleTransactionDto_LifeTimeMaintenance").rules("add",
                {
                    AtLeastOne: true
                });
        });
    </script>
}