@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Html.ActionLink(Resources.Mix.Miscellaneous, "Index", "Links", null, null, "Miscellaneous", new { area = "ConfigLink" }, null)</h4>
<h4>@Html.Raw(Resources.Mix.Item)</h4>

<div class="form-group row">
    <div class="col-md-3">
        @Html.Raw(Resources.Mix.Site)
    </div>
    <div class="col-md-6">
        <select id="Sites" class="form-control"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">
        @Html.Raw(Resources.Mix.Miscellaneous)
    </div>
    <div class="col-md-6">
        <select id="Miscellaneous" class="form-control"></select>
    </div>
</div>
<table id="tbl" class="table table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>@Html.Raw(Resources.Mix.NameBR)</th>
            <th>@Html.Raw(Resources.Mix.DescriptionBR)</th>
            <th>@Html.Raw(Resources.Mix.PriceBR)</th>
            <th>@Html.Raw(Resources.Mix.CodeBR)</th>
            <th>@Html.Raw(Resources.Mix.isOrderBR)</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<hr />
<table id="tbl2" class="table table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>@Html.Raw(Resources.Mix.NameBR)</th>
            <th>@Html.Raw(Resources.Mix.DescriptionBR)</th>
            <th>@Html.Raw(Resources.Mix.PriceBR)</th>
            <th>@Html.Raw(Resources.Mix.CodeBR)</th>
            <th>@Html.Raw(Resources.Mix.isOrderBR)</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        var table;
        var table2;

        function sites() {
            $.ajax({
                url: "/api/miscellaneous/sites"
            })
                .done(function (response) {
                    var len = response.length;
                    $("#Sites").empty();
                    $("#Sites").append("<option value='0'>請選擇 Please Select</option>");
                    for (var i = 0; i < len; i++) {
                        var id = response[i]['id'];
                        var name = response[i]['name'];
                        $("#Sites").append("<option value='" + id + "'>" + name + "</option>");
                    }
                })
                .fail(function () {
                    toastr.error(MEMORIAL_UNEXPECTED_HAPPENED);
                });
        }

        function miscellaneous() {
            $.ajax({
                url: "/api/sites/" + $("#Sites").val() + "/miscellaneous/mains"
            })
                .done(function (response) {
                    var len = response.length;
                    $("#Miscellaneous").empty();
                    $("#Miscellaneous").append("<option value='0'>請選擇 Please Select</option>");
                    for (var i = 0; i < len; i++) {
                        var id = response[i]['id'];
                        var name = response[i]['name'];
                        $("#Miscellaneous").append("<option value='" + id + "'>" + name + "</option>");
                    }
                })
                .fail(function () {
                    toastr.error(MEMORIAL_UNEXPECTED_HAPPENED);
                });
        }

        function bindtbls() {
            table.ajax.url("/api/miscellaneous/mains/" + $("#Miscellaneous").val() + "/Items").load();
            table2.ajax.url("/api/miscellaneous/mains/" + $("#Miscellaneous").val() + "/availableitems").load();
        }
        
        $(document).ready(function () {
            sites();

            $("#Sites").change(function () {
                miscellaneous();
            })

            $("#Miscellaneous").change(function () {
                bindtbls();
            })

            table = $("#tbl").DataTable({
                ajax: {
                    url: "/api/miscellaneous/mains/0/Items",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "subProductServiceDto.name",
                        render: function (data, type, item) {
                            return "<a href='/MiscellaneousConfig/Items/Form/" + item.id + "'>" + item.subProductServiceDto.name + "</a>";
                        }
                    },
                    {
                        data: "subProductServiceDto.description",
                    },
                    {
                        render: function (data, type, item) {
                            if (item.price == null)
                                return item.subProductServiceDto.price;
                            else
                                return item.price;
                        }
                    },
                    {
                        render: function (data, type, item) {
                            if (item.code == null)
                                return item.subProductServiceDto.code;
                            else
                                return item.code;
                        }
                    },
                    {
                        render: function (data, type, item) {
                            if (item.isOrder == null)
                                return item.subProductServiceDto.isOrder;
                            else
                                return item.isOrder;
                        }
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn btn-sm btn-danger js-delete' data-item-id=" + data + ">刪除 Delete</button>";
                        }
                    }
                ]
            });

            table2 = $("#tbl2").DataTable({
                ajax: {
                    url: "/api/miscellaneous/mains/0/availableitems",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "description",
                    },
                    {
                        data: "price",
                    },
                    {
                        data: "code",
                    },
                    {
                        data: "isOrder",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-sm btn-primary js-add' data-availableitem-id=" + data + ">添加 Add</button>";
                        }
                    }
                ]
            });


            $("#tbl").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm(MEMORIAL_CONFIRM, function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/miscellaneous/mains/items/" + button.attr("data-item-id"),
                            method: "DELETE",
                            success: function () {
                                bindtbls();
                            }
                        });
                    }
                });
            });

            $("#tbl2").on("click", ".js-add", function () {
                var button = $(this);
                var vm = {
                    SubProductServiceDtoId: button.attr("data-availableitem-id"),
                    MiscellaneousDtoId: $("#Miscellaneous").val()
                };
                bootbox.confirm(MEMORIAL_CONFIRM, function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/miscellaneous/mains/items",
                            method: "POST",
                            data: vm,
                            success: function () {
                                bindtbls();
                            }
                        });
                    }
                });
            });
            
        });
    </script>
}


