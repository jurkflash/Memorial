@model Memorial.ViewModels.CemeteryTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.CemeteryTransactionDto.ApplicantDtoId, area = "Applicant" });}

<h2>@Html.Raw(Resources.Mix.Form)</h2>

@using (Html.BeginForm("Save", "FengShuiTransfers", new { area = "Cemetery" }))
{
    @Html.DisplayTextFor(a=>a.CemeteryTransactionDto.AF)

    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.ApplicantBR)
        </div>
        <div class="col-md-6">
            @Model.CemeteryTransactionDto.PlotDto.ApplicantDto.Name &nbsp;
            @Model.CemeteryTransactionDto.PlotDto.ApplicantDto.Name2
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9">
            @Html.Raw(Resources.Mix.TransferToBR)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.NewApplicantBR)
        </div>
        <div class="col-md-6">
            @Model.CemeteryTransactionDto.ApplicantDto.Name &nbsp;
            @Model.CemeteryTransactionDto.ApplicantDto.Name2
            @Html.ValidationMessageFor(a => a.CemeteryTransactionDto.ApplicantDto.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.PriceBR)
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.CemeteryTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.RemarkBR)
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.CemeteryTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(c => c.CemeteryTransactionDto.CemeteryItemId)
    @Html.HiddenFor(c => c.CemeteryTransactionDto.PlotDtoId)
    @Html.HiddenFor(c => c.CemeteryTransactionDto.ApplicantDtoId)
    @Html.HiddenFor(c => c.CemeteryTransactionDto.TransferredApplicantId)
    @Html.HiddenFor(c => c.CemeteryTransactionDto.AF)
    <button type="submit" class="btn btn-primary">@Html.Raw(Resources.Mix.Save)</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

}
