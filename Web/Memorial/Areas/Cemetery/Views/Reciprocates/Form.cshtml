@model Memorial.ViewModels.CemeteryTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.Raw(Resources.Mix.Form)</h2>

@using (Html.BeginForm("Save", "Reciprocates", new { area = "Cemetery" }))
{
    @Model.CemeteryTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.FengShuiMasterBR)
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(pt => pt.CemeteryTransactionDto.FengShuiMasterId, new SelectList(Model.FengShuiMasterDtos, "Id", "Name"), "請選擇 Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.AmountBR)
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(pt => pt.CemeteryTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.RemarkBR)
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(pt => pt.CemeteryTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(pt => pt.CemeteryTransactionDto.CemeteryItemDtoId)
    <button type="submit" class="btn btn-primary">@Html.Raw(Resources.Mix.Save)</button>
}
