@model Memorial.ViewModels.PlotInfoViewModel

<div class="form-group row">
    <div class="col-md-2 font-weight-bold">
        @Html.Raw(Resources.Mix.SiteBR)
    </div>
    <div class="col-md-2">
        @Model.SiteDto.Name
    </div>
    <div class="col-md-2 font-weight-bold">
        @Html.Raw(Resources.Mix.AreaBR)
    </div>
    <div class="col-md-2">
        @Model.CemeteryAreaDto.Name
    </div>
</div>
<div class="form-group row">
    <div class="col-md-2 font-weight-bold">
        @Html.Raw(Resources.Mix.No_BR)
    </div>
    <div class="col-md-2">
        @Model.PlotDto.Name
    </div>
    <div class="col-md-2 font-weight-bold">
        @Html.Raw(Resources.Mix.DescriptionBR)
    </div>
    <div class="col-md-2">
        @Model.PlotDto.Description
    </div>
    <div class="col-md-2 font-weight-bold">
        @Html.Raw(Resources.Mix.RemarkBR)
    </div>
    <div class="col-md-2">
        @Model.PlotDto.Remark
    </div>
</div>
<div class="form-group row">
    <div class="col-md-1 font-weight-bold">
        @Html.Raw(Resources.Mix.PriceBR)
    </div>
    <div class="col-md-1">
        @Model.PlotDto.Price
    </div>
    <div class="col-md-1 font-weight-bold">
        @Html.Raw(Resources.Mix.TurfMaintenanceFees)
    </div>
    <div class="col-md-1">
        @Model.PlotDto.Maintenance
    </div>
    <div class="col-md-1 font-weight-bold">
        @Html.Raw(Resources.Mix.BrickPriceBR)
    </div>
    <div class="col-md-1">
        @Model.PlotDto.Brick
    </div>
    <div class="col-md-1 font-weight-bold">
        @Html.Raw(Resources.Mix.DigPriceBR)
    </div>
    <div class="col-md-1">
        @Model.PlotDto.Dig
    </div>
    <div class="col-md-1 font-weight-bold">
        @Html.Raw(Resources.Mix.WallPriceBR)
    </div>
    <div class="col-md-1">
        @Model.PlotDto.Wall
    </div>
</div>

<hr />
<h5>@Html.Raw(Resources.Mix.Applicant)</h5>
@if (Model.ApplicantDto == null)
{
    <div>@Html.Raw(Resources.Mix.NoRecord)</div>
}
else
{
    <div class="form-group row">
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.EnglishNameBR)
        </div>
        <div class="col-md-3">
            @Html.ActionLink(Model.ApplicantDto.Name, "Info", "Applicants", new { id = Model.ApplicantDto.Id }, null)
        </div>
        <div class="col-md-3">
            @Html.Raw(Resources.Mix.ChineseNameBR)
        </div>
        <div class="col-md-3">
            @Model.ApplicantDto.Name2
        </div>
    </div>
    if (Model.NumberOfPlacements == 1)
    {
        <h5>@Html.Raw(Resources.Mix.Deceased)</h5>
    }
    else
    {
        <h5>@Html.Raw(Resources.Mix.Deceased)1</h5>
    }
    if (Model.DeceasedFlatten1Dto == null)
    {
        <div>@Html.Raw(Resources.Mix.NoRecord)</div>
    }
    else
    {
        <div class="form-group row">
            <div class="col-md-1">
                @Html.Raw(Resources.Mix.EnglishNameBR)
            </div>
            <div class="col-md-2">
                @Html.ActionLink(Model.DeceasedFlatten1Dto.DeceasedName, "Info", "Deceaseds", new { id = Model.DeceasedFlatten1Dto.DeceasedId }, null)
            </div>
            <div class="col-md-1">
                @Html.Raw(Resources.Mix.ChineseNameBR)
            </div>
            <div class="col-md-2">
                @Model.DeceasedFlatten1Dto.DeceasedName2
            </div>
            <div class="col-md-2">
                Relationship
            </div>
            <div class="col-md-2">
                @Model.DeceasedFlatten1Dto.RelationshipTypeName
            </div>
        </div>
    }
    if (Model.NumberOfPlacements == 2)
    {
        <h5>@Html.Raw(Resources.Mix.Deceased)2</h5>
        if (Model.DeceasedFlatten2Dto == null)
        {
            <div>@Html.Raw(Resources.Mix.NoRecord)</div>
        }
        else
        {
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.Raw(Resources.Mix.EnglishNameBR)
                </div>
                <div class="col-md-1">
                    @Html.ActionLink(Model.DeceasedFlatten2Dto.DeceasedName, "Info", "Deceaseds", new { id = Model.DeceasedFlatten2Dto.DeceasedId }, null)
                </div>
                <div class="col-md-2">
                    @Html.Raw(Resources.Mix.ChineseNameBR)
                </div>
                <div class="col-md-2">
                    @Model.DeceasedFlatten2Dto.DeceasedName2
                </div>
                <div class="col-md-2">
                    @Html.Raw(Resources.Mix.RelationshipBR)
                </div>
                <div class="col-md-2">
                    @Model.DeceasedFlatten2Dto.RelationshipTypeName
                </div>
            </div>
        }
    }
    if (Model.NumberOfPlacements == 3)
    {
        <h5>@Html.Raw(Resources.Mix.Deceased)3</h5>
        if (Model.DeceasedFlatten3Dto == null)
        {
            <div>@Html.Raw(Resources.Mix.NoRecord)</div>
        }
        else
        {
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.Raw(Resources.Mix.EnglishNameBR)
                </div>
                <div class="col-md-1">
                    @Html.ActionLink(Model.DeceasedFlatten3Dto.DeceasedName, "Info", "Deceaseds", new { id = Model.DeceasedFlatten3Dto.DeceasedId }, null)
                </div>
                <div class="col-md-2">
                    @Html.Raw(Resources.Mix.ChineseNameBR)
                </div>
                <div class="col-md-2">
                    @Model.DeceasedFlatten2Dto.DeceasedName2
                </div>
                <div class="col-md-2">
                    @Html.Raw(Resources.Mix.RelationshipBR)
                </div>
                <div class="col-md-2">
                    @Model.DeceasedFlatten2Dto.RelationshipTypeName
                </div>
            </div>
        }
    }
}