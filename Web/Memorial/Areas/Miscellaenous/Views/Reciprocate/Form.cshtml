@model Memorial.ViewModels.MiscellaneousTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Reciprocate", new { area = "Miscellaneous" }))
{
    @Model.MiscellaneousTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            FengShui Master
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(m => m.MiscellaneousTransactionDto.PlotLandscapeCompanyId, new SelectList(Model.PlotLandscapeCompanyDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Amount
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.MiscellaneousTransactionDto.Amount, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(m => m.MiscellaneousTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(m => m.MiscellaneousTransactionDto.MiscellaneousItemId)
    <button type="submit" class="btn btn-primary">Save</button>
}
