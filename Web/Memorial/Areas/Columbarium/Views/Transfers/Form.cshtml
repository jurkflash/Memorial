@model Memorial.ViewModels.ColumbariumTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.ColumbariumTransactionDto.ApplicantId, area = "Applicant" });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Transfers", new { area = "Columbarium" }))
{
    @Html.DisplayTextFor(a=>a.ColumbariumTransactionDto.AF)

    <div class="form-group row">
        <div class="col-md-3">
            Owner
        </div>
        <div class="col-md-6">
            @Model.ColumbariumTransactionDto.Niche.Applicant.Name &nbsp;
            @Model.ColumbariumTransactionDto.Niche.Applicant.Name2
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9">
            Transfer To
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            New applicant
        </div>
        <div class="col-md-6">
            @Model.ColumbariumTransactionDto.Applicant.Name &nbsp;
            @Model.ColumbariumTransactionDto.Applicant.Name2
            @Html.ValidationMessageFor(a => a.ColumbariumTransactionDto.Applicant.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.ColumbariumTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.ColumbariumTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(c => c.ColumbariumTransactionDto.ColumbariumItemId)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.NicheId)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.AF)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.TransferredFromApplicantId)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

}
