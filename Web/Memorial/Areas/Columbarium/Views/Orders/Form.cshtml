@model Memorial.ViewModels.ColumbariumTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.ColumbariumTransactionDto.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Orders", new { area = "Columbarium" }))
{
    @Model.ColumbariumTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            逝世者 Deceased1
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.ColumbariumTransactionDto.Deceased1Id, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.ColumbariumTransactionDto.Deceased1Id)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            逝世者 Deceased2
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.ColumbariumTransactionDto.Deceased2Id, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.ColumbariumTransactionDto.Deceased2Id)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Funeral Company
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.ColumbariumTransactionDto.FuneralCompanyId, new SelectList(Model.FuneralCompanyDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.ColumbariumTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.ColumbariumTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.ColumbariumTransactionDto.Maintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.ColumbariumTransactionDto.Maintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            LifeTime Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.ColumbariumTransactionDto.LifeTimeMaintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.ColumbariumTransactionDto.LifeTimeMaintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.ColumbariumTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.ColumbariumItemId)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.NicheId)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.ApplicantId)
    @Html.HiddenFor(c => c.ColumbariumTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">

        $(document).ready(function () {

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#ColumbariumTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });

            $("#ColumbariumTransactionDto_Maintenance").rules("add",
                {
                    AtLeastOne: true
                });

            $("#ColumbariumTransactionDto_LifeTimeMaintenance").rules("add",
                {
                    AtLeastOne: true
                });
        });
    </script>
}