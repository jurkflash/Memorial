@model Memorial.ViewModels.ColumbariumTransactionsInfoViewModel
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Model.ExportToPDF)
{
    @Html.ActionLink("Print All", "PrintAll", new { AF = Model.ColumbariumTransactionDto.AF })
}

@Html.Raw(Model.Header)

<div class="row flexrow">
    <div class="col-md-3" style="text-align:left">
        <span>Transaction Date</span><br />
        <span>@Model.ColumbariumTransactionDto.CreatedDate.ToString("yyyy-MMM-dd")</span>
    </div>
    <div class="col-md-6" style="text-align:center">
        @Html.Raw(Resources.Mix.AncestralTabletApplicationFormBR)
    </div>
    <div class="col-md-3" style="text-align:right">
        @Model.ColumbariumTransactionDto.AF
    </div>
</div>

@{Html.RenderAction("Info", "ApplicantDeceaseds", new { applicantId = Model.ApplicantId, deceasedId = Model.ColumbariumTransactionDto.DeceasedDto1Id, area = "ApplicantDeceaseds" });}

@if (Model.ColumbariumTransactionDto.DeceasedDto2Id != null)
{
    { Html.RenderAction("Info", "ApplicantDeceaseds", new { applicantId = Model.ApplicantId, deceasedId = Model.ColumbariumTransactionDto.DeceasedDto2Id, showApplicant = false, area = "ApplicantDeceaseds" }); }
}

<h5 style="padding-top:5px"><u>@Model.ItemName</u></h5>

<div class="row flexrow">
    <div class="col-md-3">
        @Html.Raw(Resources.Mix.No_BR)
    </div>
    <div class="col-md-3">
        @Model.ColumbariumTransactionDto.NicheDto.Name
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-3">
        @Html.Raw(Resources.Mix.AreaBR)
    </div>
    <div class="col-md-3">
        @Model.ColumbariumTransactionDto.NicheDto.ColumbariumAreaDto.Name
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-3">
        @Html.Raw(Resources.Mix.CentreBR)
    </div>
    <div class="col-md-3">
        @Model.ColumbariumCentreDto.Name
    </div>
</div>
<div class="row flexrow">
    <div class="col-md-3">
        @Html.Raw(Resources.Mix.RemarkBR)
    </div>
    <div class="col-md-3">
        @Model.ColumbariumTransactionDto.Remark
    </div>
</div>

