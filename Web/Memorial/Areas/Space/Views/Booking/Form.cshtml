@model Memorial.ViewModels.SpaceTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.SpaceTransactionDto.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "SpaceBooking"))
{
    @Model.SpaceTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(s => s.SpaceTransactionDto.DeceasedId, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.SpaceTransactionDto.DeceasedId)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Funeral Company
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(s => s.SpaceTransactionDto.FuneralCompanyId, new SelectList(Model.FuneralCompanyDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            From
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(s => s.SpaceTransactionDto.FromDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(s => s.SpaceTransactionDto.FromDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            To
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(s => s.SpaceTransactionDto.ToDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(s => s.SpaceTransactionDto.ToDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(s => s.SpaceTransactionDto.Amount, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(s => s.SpaceTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(s => s.SpaceTransactionDto.SpaceItemId)
    @Html.HiddenFor(s => s.SpaceTransactionDto.ApplicantId)
    @Html.HiddenFor(s => s.SpaceTransactionDto.AF)
    @Html.HiddenFor(s => s.SpaceTransactionDto.BasePrice)
    <button type="submit" class="btn btn-primary" id="btnSubmit">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    @Scripts.Render("~/bundles/jqueryui-timepicker")
    @Styles.Render("~/Content/jqueryuicss-timepicker")

    <script type="text/javascript">

        $("#SpaceTransactionDto_FromDate").blur(function () {
            getAmount();
            getAvailability();
        });

        $("#SpaceTransactionDto_ToDate").blur(function () {
            getAmount();
            getAvailability();
        });

        function getAmount() {
            var f = $("#SpaceTransactionDto_FromDate").val();
            var t = $("#SpaceTransactionDto_ToDate").val();
            if (f != "" && t != "") {
                var sii = $("#SpaceTransactionDto_SpaceItemId").val();
                var url = '/api/Spaces/GetAmount';
                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { from: f, to: t, spaceItemId: sii }
                }).done(function (data) {
                    $("#SpaceTransactionDto_Amount").val(data);
                }).fail(function () {
                    toastr.error("Something unexpected happened.");
                });
            }
        }

        function getAvailability() {
            var f = $("#SpaceTransactionDto_FromDate").val();
            var t = $("#SpaceTransactionDto_ToDate").val();
            var sii = $("#SpaceTransactionDto_SpaceItemId").val();
            var af = $("#SpaceTransactionDto_AF").val();
            if (f != "" && t != "") {
                
                var paramdata = { from: f, to: t, spaceItemId: sii };
                if (af != "")
                    paramdata = { from: f, to: t, AF: af };

                var url = '/api/Spaces/GetAvailability';
                $.ajax({
                    url: url,
                    type: 'GET',
                    data: paramdata
                }).done(function (data) {
                    if (data) {
                        toastr.success("Date available");
                        $("#btnSubmit").prop("disabled", false);
                    }
                    else {
                        toastr.error("Date not available");
                        $("#btnSubmit").prop("disabled", true);
                    }
                }).fail(function () {
                    toastr.error("Something unexpected happened.");
                });
            }
        }

        $(document).ready(function () {   // will trigger when the document is ready
            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#SpaceTransactionDto_Amount").rules("add",
            {
                AtLeastOne: true
            });

            var dateNow = new Date();
            $('.datepicker').datetimepicker({
                dateFormat: 'yy-mm-dd',
                defaultDate: dateNow
            }); //Initialise any date pickers
            $('.datetimepicker').datetimepicker({
                dateFormat: 'yy-mm-dd',
                timeFormat: 'HH:mm',
                defaultDate: dateNow
            }); //Initialise any date pickers
        });
    </script>

}