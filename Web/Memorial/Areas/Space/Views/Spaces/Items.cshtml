@model Memorial.ViewModels.SpaceItemsViewModel
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.Raw(Resources.Mix.NameBR)</th>
            <th>@Html.Raw(Resources.Mix.DescriptionBR)</th>
            <th>@Html.Raw(Resources.Mix.PriceBR)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var spaceItem in Model.SpaceItemDtos)
        {
            <tr>
                <td>@Html.ActionLink(spaceItem.Name, "Index", spaceItem.SystemCode, new { itemId = spaceItem.Id, applicantId = Model.ApplicantId, area = "Space" }, null)</td>
                <td>@spaceItem.Description</td>
                <td>@spaceItem.Price</td>
            </tr>
        }
    </tbody>
</table>