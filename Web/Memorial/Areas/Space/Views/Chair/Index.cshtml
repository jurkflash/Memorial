@model Memorial.ViewModels.SpaceItemIndexesViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (Model.AllowNew)
{
    <p>
        @Html.ActionLink("New", "Form", new { itemId = Model.SpaceItemId, applicantId = Model.ApplicantId, area = "Space" })
    </p>
}

@using (Html.BeginForm("Index", "Chair", new { area = "Space" }))
{
    <p>
        Find by Name: @Html.TextBox("filter")
        @Html.Hidden("itemId", Model.SpaceItemId.ToString())
        @Html.Hidden("applicantId", Model.ApplicantId.ToString())
        <input type="submit" value="Search" class="btn btn-secondary" />
    </p>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>AF</th>
            <th>From</th>
            <th>To</th>
            <th>Remark</th>
            <th>Price</th>
            <th>Create Date</th>
            <th>Invoice</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var spaceTransaction in Model.SpaceTransactionDtos)
        {
            <tr>
                <td>@Html.ActionLink(spaceTransaction.AF, "Info", new { AF = spaceTransaction.AF }, new { target = "SpaceTransactionInfo" })</td>
                <td>@spaceTransaction.FromDate</td>
                <td>@spaceTransaction.ToDate</td>
                <td>@spaceTransaction.Remark</td>
                <td>@spaceTransaction.Amount</td>
                <td>@spaceTransaction.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@Html.ActionLink("Invoice", "Invoices", new { AF = spaceTransaction.AF, area = "Space" })</td>
                <td>@Html.ActionLink("Edit", "Form", new { AF = spaceTransaction.AF, applicantId = Model.ApplicantId, area = "Space" })</td>
                <td>
                    @Html.ActionLink("Delete", "Delete",
                    new { AF = spaceTransaction.AF, itemId = Model.SpaceItemId, applicantId = Model.ApplicantId, area = "Space" },
                    new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
Page @(Model.SpaceTransactionDtos.PageCount < Model.SpaceTransactionDtos.PageNumber ? 0 : Model.SpaceTransactionDtos.PageNumber) of @Model.SpaceTransactionDtos.PageCount
@Html.PagedListPager(Model.SpaceTransactionDtos, page => Url.Action("Index",
    new { page, itemId = Model.SpaceItemId.ToString(), applicantId = Model.ApplicantId.ToString(), filter = ViewBag.CurrentFilter }))


