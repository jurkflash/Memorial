@model Memorial.ViewModels.PlotTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>

@using (Html.BeginForm("Save", "Reciprocate", new { area = "Plot" }))
{
    @Model.PlotTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            FengShui Master
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(pt => pt.PlotTransactionDto.FengShuiMasterId, new SelectList(Model.FengShuiMasterDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Amount
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(pt => pt.PlotTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(pt => pt.PlotTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(pt => pt.PlotTransactionDto.PlotItemId)
    <button type="submit" class="btn btn-primary">Save</button>
}
