@model Memorial.ViewModels.PlotTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { area = "ApplicantDeceaseds", id = Model.PlotTransactionDto.ApplicantDtoId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "SecondBurial", new { area = "Plot" }))
{
    @Model.PlotTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.PlotTransactionDto.DeceasedDto1Id, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.DeceasedDto1Id)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.PlotTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.PlotTransactionDto.PlotItemId)
    @Html.HiddenFor(c => c.PlotTransactionDto.PlotDtoId)
    @Html.HiddenFor(c => c.PlotTransactionDto.ApplicantDtoId)
    @Html.HiddenFor(c => c.PlotTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">

        $(document).ready(function () {

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $("#PlotTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });

        });
    </script>
}