@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.Raw(Resources.Mix.AncestralTablet)</h2>
<p>
    @Html.ActionLink(Resources.Mix.New, "New", "New", null, new { @class = "btn btn-primary" })
</p>

<table id="tbl" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.Raw(Resources.Mix.NameBR)</th>
            <th>X</th>
            <th>Y</th>
            <th>@Html.Raw(Resources.Mix.PriceBR)</th>
            <th>@Html.Raw(Resources.Mix.MaintenanceFeesBR)</th>
            <th>@Html.Raw(Resources.Mix.RemarkBR)</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var url_string = window.location.href
            var url = new URL(url_string);

            var table = $("#tbl").DataTable({
                ajax: {
                    url: "/api/configAncestralTablets",
                    data: { areaId: url.searchParams.get("areaId") },
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, item) {
                            return "<a href='/AncestralTablets/" + item.id + "'>" + item.name + "</a>";
                        }
                    },
                    {
                        data: "positionX"
                    },
                    {
                        data: "positionY"
                    },
                    {
                        data: "price"
                    },
                    {
                        data: "maintenance"
                    },
                    {
                        data: "remark"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn btn-sm btn-danger js-delete' data-id=" + data + ">刪除 Delete</button>";
                        }
                    }
                ]
            });


            $("#tbl").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm(MEMORIAL_UNEXPECTED_HAPPENED, function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/configAncestralTablets/" + button.attr("data-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}


