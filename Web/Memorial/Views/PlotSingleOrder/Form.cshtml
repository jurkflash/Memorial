@model Memorial.ViewModels.PlotTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { id = Model.PlotTransactionDto.ApplicantDtoId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "PlotSingleOrder"))
{
    @Model.PlotTransactionDto.AF
    <div class="form-group row">
        <div class="col-md-3">
            Deceased
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(c => c.PlotTransactionDto.Deceased1Id, new SelectList(Model.DeceasedBriefDtos, "Id", "Name"), "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Deceased1Id)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Price, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Maintenance
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Maintenance, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Maintenance)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Dig
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Dig, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Dig)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Brick
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Brick, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Brick)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Wall
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Wall, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(c => c.PlotTransactionDto.Wall)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.PlotTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(c => c.PlotTransactionDto.PlotItemId)
    @Html.HiddenFor(c => c.PlotTransactionDto.PlotDtoId)
    @Html.HiddenFor(c => c.PlotTransactionDto.ApplicantDtoId)
    @Html.HiddenFor(c => c.PlotTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    <script type="text/javascript">

        $(document).ready(function () {

            $.validator.addMethod("AtLeastOne", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 1");

            $.validator.addMethod("AtLeastZero", function (value, element, arg) {
                if (value >= 1)
                    return true;
                return false;
            }, "At least 0");

            $("#PlotTransactionDto_Price").rules("add",
                {
                    AtLeastOne: true
                });

            $("#PlotTransactionDto_Maintenance").rules("add",
                {
                    AtLeastZero: true
                });

            $("#PlotTransactionDto_Dig").rules("add",
                {
                    AtLeastZero: true
                });

            $("#PlotTransactionDto_Brick").rules("add",
                {
                    AtLeastZero: true
                });

            $("#PlotTransactionDto_Wall").rules("add",
                {
                    AtLeastZero: true
                });
        });
    </script>
}