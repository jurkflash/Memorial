@model Memorial.Core.Dtos.SpaceTransactionDto
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "SpaceTransactions"))
{
    @Html.LabelFor(s => s.AF)
    <div class="form-group row">
        <div class="col-md-3">
            From
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(s => s.FromDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(s => s.FromDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            To
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(s => s.ToDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker", @required = "required" })
            @Html.ValidationMessageFor(s => s.ToDate)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(s => s.Amount, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(s => s.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(s => s.SpaceItemId)
    @Html.HiddenFor(s => s.ApplicantId)
    @Html.HiddenFor(s => s.BasePrice)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

    @Scripts.Render("~/bundles/jqueryui-timepicker")
    @Styles.Render("~/Content/jqueryuicss-timepicker")

    <script type="text/javascript">
        $("#FromDate").blur(function () {
            getAmount();
            getAvailability();
        });

        $("#ToDate").blur(function () {
            getAmount();
            getAvailability();
        });

        function getAmount() {
            var f = $("#FromDate").val();
            var t = $("#ToDate").val();
            if (f != "" && t != "") {
                var sii = $("#SpaceItemId").val();
                var url = '/api/Spaces/GetAmount';
                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { from: f, to: t, spaceItemId: sii }
                }).done(function (data) {
                    $("#Amount").val(data);
                }).fail(function () {
                    toastr.error("Something unexpected happened.");
                });
            }
        }

        function getAvailability() {
            var f = $("#FromDate").val();
            var t = $("#ToDate").val();
            if (f != "" && t != "") {
                var sii = $("#SpaceItemId").val();
                var url = '/api/Spaces/GetAvailability';
                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { from: f, to: t, spaceItemId: sii }
                }).done(function (data) {
                    if (data)
                        toastr.success("Date available");
                    else
                        toastr.error("Date not available");
                }).fail(function () {
                    toastr.error("Something unexpected happened.");
                });
            }
        }

        $(document).ready(function () {   // will trigger when the document is ready
            var dateNow = new Date();
            $('.datepicker').datetimepicker({
                dateFormat: 'yy-mm-dd',
                useCurrent: false,
                defaultDate: dateNow
            }); //Initialise any date pickers
            $('.datetimepicker').datetimepicker({
                dateFormat: 'yy-mm-dd',
                timeFormat: 'HH:mm',
                useCurrent: false,
                defaultDate: dateNow
            }); //Initialise any date pickers
        });
    </script>

}