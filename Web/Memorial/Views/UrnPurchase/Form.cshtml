@model Memorial.Core.Dtos.UrnTransactionDto
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("Index", "ApplicantDeceaseds", new { id = Model.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "UrnPurchase"))
{
    @Model.AF
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(u => u.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(u => u.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(u => u.UrnItemId)
    @Html.HiddenFor(u => u.ApplicantId)
    <button type="submit" class="btn btn-primary">Save</button>
}
