<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CCAKJB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Action("Navigation", "Navigation", new { area = "Navigation" })

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 甲洞华人义山机构 Chinese Cemetery Association of Kepong, Jinjang & Batu Village</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")

    @RenderSection("scripts", required: false)
</body>
</html>