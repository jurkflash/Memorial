@model Memorial.ViewModels.CremationItemsViewModel
@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.ApplicantId != 0)
{
    Html.RenderAction("Index", "ApplicantDeceaseds", new { id = Model.ApplicantId });
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cremationItem in Model.CremationItemDtos)
        {
            <tr>
                <td>@Html.ActionLink(cremationItem.Name, "Index", "Cremation" + cremationItem.SystemCode, new { itemId = cremationItem.Id, applicantId = Model.ApplicantId }, null)</td>
                <td>@cremationItem.Description</td>
                <td>@cremationItem.Price</td>
            </tr>
        }
    </tbody>
</table>