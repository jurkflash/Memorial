@model Memorial.ViewModels.PlotTransactionsFormViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.PlotTransactionDto.ApplicantDtoId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "PlotFengShuiTransfer"))
{
    @Html.DisplayTextFor(a=>a.PlotTransactionDto.AF)

    <div class="form-group row">
        <div class="col-md-3">
            Owner
        </div>
        <div class="col-md-6">
            @Model.PlotTransactionDto.PlotDto.ApplicantDto.Name &nbsp;
            @Model.PlotTransactionDto.PlotDto.ApplicantDto.Name2
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9">
            Transfer To
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            New applicant
        </div>
        <div class="col-md-6">
            @Model.PlotTransactionDto.ApplicantDto.Name &nbsp;
            @Model.PlotTransactionDto.ApplicantDto.Name2
            @Html.ValidationMessageFor(a => a.PlotTransactionDto.ApplicantDto.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(c => c.PlotTransactionDto.Price, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(c => c.PlotTransactionDto.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(c => c.PlotTransactionDto.PlotItemId)
    @Html.HiddenFor(c => c.PlotTransactionDto.PlotDtoId)
    @Html.HiddenFor(c => c.PlotTransactionDto.ApplicantDtoId)
    @Html.HiddenFor(c => c.PlotTransactionDto.AF)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/jqueryuicss")

}
